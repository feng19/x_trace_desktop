{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Xtrace",
  "version": "0.2.0",
  "identifier": "com.feng19.xtrace",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Xtrace",
        "width": 1024,
        "height": 640,
        "fullscreen": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/xtrace"]
  }
}
